<h2>注文一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y年/%m月/%d日 %H:%M:%S') %>
      </td>
      <td>
        <%= order.customer.last_name %>
        <%= order.customer.first_name %>
      </td>
      <td>
        <%= link_to admin_order_path(order) do %>
          詳細
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>