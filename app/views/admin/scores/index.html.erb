<h4>商品一覧</h4>

<%= link_to new_admin_score_path do %>
  <button>＋</button>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>曲名</th>
      <th>ジャンル</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.id %></td>
        <td><%= link_to score.score_name, admin_score_path(score.id) %></td>
        <td><%= score.genre.genre_name %></td>
        <td><%= score.without_tax.to_s(:delimited)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @scores %>