<div class= "container">
  <div class= "row justify-content-start">

    <div class= "col-md-2 my-5">
      <%= render "layouts/sidebar", genres: @genres %>
    </div>

    <div class= "col-md-10 my-5">
      <h2>リクエスト一覧</h2>

      <table class="table table-hover">
        <thead>
          <tr class="table-active text">
            <th>ID</th>
            <th>件名</th>
            <th>ユーザー名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @requests.each do |request| %>
            <tr class="light-text">
              <td><%= request.id %></td>
              <td><%= request.title %></td>
              <td><%= request.customer.last_name %><%= request.customer.first_name %></td>
              <td>
                <%= link_to edit_admin_request_path(request.id) do %>
                  <button type="button" class="btn btn-success">詳細/編集</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @requests %>
    </div>

  </div>
</div>
