<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
      <td><%= customer.email %></td>
      <% if customer.is_deleted == false %>
        <td>有効</td>
      <% else %>
        <td>退会</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>