<div class= "container">
  <div class= "row justify-content-start">

    <div class= "col-md-2 my-5">
      <%= render "layouts/sidebar", genres: @genres %>
    </div>

    <div class= "col-md-10 my-5">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
      <table class='table text-secondary'>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>  <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_last %>  <%= @customer.kana_first %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-muted font-weight-bold">退会</td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <th>
              <%= link_to edit_admin_customer_path(@customer.id) do %>
                <button type="button" class="btn btn-success">編集する</button>
              <% end %>
              <%= link_to admin_orders_path do %>
                <button type="button" class="btn btn-info">注文履歴一覧</button>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
