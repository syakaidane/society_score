<div class="container my-5">
  <div class= "row justify-content-start">

    <div class= "col-md-4 my-5">
      <h2>注文履歴詳細</h2>

      <h6 class="mt-5">注文情報</h6>

      <table class='table text-secondary my-3'>
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y年/%m月/%d日') %></td>
          </tr>
          <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <td>¥<%= @order.total %></td>
          </tr>
        </tbody>
      </table>

      <h6 class="mt-5">商品情報</h6>

      <table class='table text-secondary my-3'>
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込み)</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_lists.each do |order_list| %>
            <tr>
              <td><%= order_list.score.score_name %></td>
              <td><%= order_list.score.with_tax %></td>
              <td><%= order_list.score.with_tax %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class= "col-md-8">
      <% @order_lists.each do |order_list| %>
        <object data="/uploads/score/score/<%= order_list.score.id %>/<%= order_list.score.score_name %>.pdf" type="application/pdf" width="50%" height="50%"></object>
      <% end %>
    </div>
  </div>
</div>

