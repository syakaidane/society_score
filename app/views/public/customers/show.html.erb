<h3>マイページ</h3>

<h5>登録情報</h5>
    <%= link_to "編集する", customers_information_edit_path %>

<table class="table table-bordered">
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name + " " + @customer.first_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.kana_last + " " + @customer.kana_first %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<h5 class="col-2">注文履歴</h5>
  <%= link_to "一覧を見る", orders_path %>