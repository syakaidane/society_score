<div class="container my-5">
  <h3>会員情報編集</h3>

  <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <table>
    <tr>
      <th>氏名</th>
      <td class="public-registrations-field">
        <%= f.text_field :last_name, placeholder: "性", size: 25 %>
      </td>
      <td class="public-registrations-field">
        <%= f.text_field :first_name, placeholder: "名", size: 25 %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td class="public-registrations-field">
        <%= f.text_field :kana_last, placeholder: "カナ性", size: 25 %>
      </td>
      <td class="public-registrations-field">
        <%= f.text_field :kana_first, placeholder: "カナ名", size: 25 %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td class="public-registrations-field">
        <%= f.text_field :post_code, placeholder: "郵便番号", size: 25 %>
      </td>
    </tr>
    <tr>
      <th>住所</th>
      <td colspan="3" class="public-registrations-field">
        <%= f.text_field :address, placeholder: "住所", size: 50 %>
      </td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td class="public-registrations-field">
        <%= f.text_field :telephone, placeholder: "電話番号", size: 25 %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td class="public-registrations-field">
        <%= f.text_field :email, placeholder: "メールアドレス", size: 25 %>
      </td>
    </tr>
  </table>
    <%= f.submit '変更を保存', class: "btn btn-success m-5" %>
    <%= link_to customers_quit_path do %>
      <button type="button" class="btn btn-danger">
        退会する
      </button>
    <% end %>
  <% end %>
</div>